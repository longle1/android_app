<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Final_project" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/lavender</item>
        <item name="colorPrimaryVariant">@color/lavender</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!--    Login Page -->
    <style name="screenBackground"><item name="android:color">@color/white</item></style>
    <style name="textInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="startIconTint">@color/dark_green</item>
        <item name="android:backgroundTint">@color/light_green</item>
    </style>
    <style name="button"><item name="android:backgroundTint">@color/dark_green</item></style>
    <style name="text_title"><item name="android:textColor">@color/dark_green</item></style>
    <style name="text_forgot_pw"><item name="android:textColor">@color/dark_green</item></style>
    <style name="text"><item name="android:textColor">@color/gray_11</item></style>
    <style name="arrow_back"><item name="android:backgroundTint">@color/black</item></style>

</resources>